<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kun.auth.system.login.mapper.LoginUserInfoOuterMapper">
<!--    分页-->
    <select id="selectPage" resultType="cn.kun.auth.system.login.entity.vo.LoginUserPageVO">
        SELECT
        id,
        login_name loginName,
        login_error_number loginErrorNumber,
        login_date loginDate,
        login_type loginType,
        ascription
        FROM
        login_user_info_outer a
        <where>
            del_flag = 0
            <if test="dto.loginErrorNumber != null and dto.loginErrorNumber != ''">
                AND login_error_number LIKE concat( '%', #{dto.loginErrorNumber}, '%' )
            </if>
        </where>
        <choose>
            <when test="dto.orderBy != null and dto.orderBy != ''">
                order by ${dto.orderBy}
            </when>
            <otherwise>
                order by a.update_date desc
            </otherwise>
        </choose>
    </select>
</mapper>
