<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kun.auth.system.user.mapper.SysUserRoleInnerMapper">

<!--    通过用户id获取用户下所有角色id-->
    <select id="getRoleInnerByUserInnerId" resultType="String">
        SELECT
            GROUP_CONCAT( ur.role_inner_id ) as roleInnerList
        FROM
            sys_user_role_inner ur
        WHERE
            ur.del_flag = '0'
            <if test="userInnerId != null and userInnerId != ''">
                and ur.user_inner_id = #{userInnerId}
            </if>
    </select>
</mapper>
